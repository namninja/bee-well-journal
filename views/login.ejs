<!-- views/login.ejs -->
<%- include('head', {}); %>

<body>
    <main id="main-index">
            <h1 class="log-head">Login</h1>
        <section class="form-log">

               

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form class="log-form" action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" placeholder="demo@demo.com" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="demo" required>
                </div>

                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>

            

            <p class="form-text">Need an account? <a class="links" href="/signup">Signup</a></p>
            <p class="form-text">Or go <a class="links" href="/">home</a>.</p>

        </section>

    </main>
    <%- include('scripts', {}); %>
</body>

</html>