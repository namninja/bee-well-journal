<!-- views/profile.ejs -->
<%- include('head', {}); %>

<body>
    <div>
        <div class="page-header text-center">
            <h1></span>Profile Page</h1>
            <a href="/logout">Logout</a>
        </div>
        <div id="plotly">
        </div>
        <div class="well">
            <a href="/create-journal">create new journal</a>
            <% for( let i= journals.length-1; i >= 0; i--) { %>
            <div>
                <a href="/journal/<%=journals[i]._id%>">
                    <h2 class="dates"><%=moment(journals[i].created).format(shortDateFormat)%></h2>
                </a>
            </div>
            <% } %>
        </div>
    </div>
    <%- include('scripts', {}); %>
</body>

</html>