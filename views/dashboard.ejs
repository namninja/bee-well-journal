<!-- views/profile.ejs -->
<%- include('head', {}); %>

<body>
    <main>
        <header class="page-header text-center">
            <h1 class="bee-well-title">Bee Well Journal</h1>
            <a class="btn" href="/logout">Logout</a>
        </header>
        <div id="plotly">
        </div>
        <div class="well">
            <a class="btn" href="/create-journal">create new journal</a>
            <% for( let i= journals.length-1; i >= 0; i--) { %>
            <div>
                <a href="/journal/<%=journals[i]._id%>">
                    <h2 class="dates"><%=moment(journals[i].created).format(shortDateFormat)%></h2>
                </a>
            </div>
            <% } %>
        </div>
    </main>
    <%- include('scripts', {}); %>
</body>

</html>