<!-- views/profile.ejs -->
<%- include('head', {}); %>

<body>
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Journal</h1>
            <p><%=moment(journal[0].created).format(shortDateFormat)%></p>
            <div class="form-group">
                <h3>How do you feel this morning on a scale of 1-10</h3>
                <p><%=journal[0].morningRating%></p>
            </div>
            <div class="form-group">
                <h3>3 things you are excited about</h3>
                <% for( let i=0; i < journal[0].excitedAbout.length; i++) { %>
                <p><%=journal[0].excitedAbout[i]%></p>
                <% } %>
            </div>
            <div class="form-group">
                <h3>Today's Priorities</h3>
                <% for( let i=0; i < journal[0].priorities.length; i++) { %>
                <p><%=journal[0].priorities[i]%></p>
                <% } %>
            </div>
            <div class="form-group">
                <h3>How do you feel this evening on a scale of 1-10</h3>
                <p><%=journal[0].eveningRating%></p>
            </div>
            <div class="form-group">
                <h3>Pick three words to describe your day</h3>
                <% for( let i=0; i < journal[0].describeToday.length; i++) { %>
                <p><%=journal[0].describeToday[i]%></p>
                <% } %>
            </div>
            <div class="form-group">
                <h3>Today's Wins</h3>
                <% for( let i=0; i < journal[0].todayWins.length; i++) { %>
                <p><%=journal[0].todayWins[i]%></p>
                <% } %>
            </div>
            <div class="form-group">
                <h3>Things to improve on</h3>
                <p><%=journal[0].toImprove%></p>
            </div>
            <div class="form-group">
                <h3>Three things you are grateful for</h3>
                <% for( let i=0; i < journal[0].gratitude.length; i++) { %>
                <p><%=journal[0].gratitude[i]%></p>
                <% } %>
            </div>
            <div class="form-group">
                <h3>Journal</h3>
                <p><%=journal[0].journalEntry%></p>
            </div>

            <a href="#" class="js-delete" onclick="return confirm('WARNING! You are are about to delete this Journal')" data-key='<%=journal[0]._id%>'>Delete</a>
            <a href="/create-journal/<%=journal[0]._id%>">Edit</a>
            <a href="/dashboard" >Done</a>
            
            <hr>


        </div>


    </div>
    <%- include('scripts', {}); %>
</body>

</html>